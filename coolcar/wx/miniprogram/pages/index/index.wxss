page {
    height: 100%;
    width: 100%;
} 

#map {
    width: 100%;
    height: 100%;
}

.icon-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 87rpx;
    margin-top: 30rpx;
    height: 136rpx;
    opacity: .5;
}

.icon-container image {
    width: 60rpx;
    height: 60rpx;
}

.icon-container cover-image {  
    width: 60rpx;
    height: 60rpx;
    overflow: hidden;
}

.btn-container {
    width: 600rpx;
    margin-left: 75rpx;
    bottom: 7%;
    position: absolute;
    height: 70rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: .8;
}

.avatar-wrapper {
    padding: 0;
    width: 56px !important;
    border-radius: 8px;
    margin-top: 40px;
    margin-bottom: 40px;
}

.avatar {
    display: block;
    width: 56px;
    height: 56px;
}